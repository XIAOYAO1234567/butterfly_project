// SLiM 3.x-compatible • WF model • NC_069110.1
initialize() {
    initializeSLiMModelType("WF");
    initializeSLiMOptions(keepPedigrees = T, nucleotideBased = T);

    initializeAncestralNucleotides("SLiM/NC_069110.1.upper.fna");

    // Mutation types
    initializeMutationTypeNuc("m3", 10.0, "f", 0.01);  // balancing

    // Mutation model
    mm = mmJukesCantor(1e-7);

    // Genomic element types
    initializeGenomicElementType("g3", m3, 1.0, mm);

    // Genomic elements
    initializeGenomicElement(g3, 5630001, 5640000);    // Balancing 1
    initializeGenomicElement(g3, 5920001, 6150000);    // Balancing 2
    initializeGenomicElement(g1, 21498242, 21498243);   // rest

    initializeRecombinationRate(1e-8);

    m3.convertToSubstitution = F;
}

1 early() {
    sim.addSubpop("p1", 5);

    p1.genomes.readFromVCF(filePath = "SLiM/NC_069110.1_MT3_balancing.cleaned.vcf", mutationType = m3);
}

10 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069110.1_10_generations.vcf");
}
20 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069110.1_20_generations.vcf");
}
30 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069110.1_30_generations.vcf");
}
40 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069110.1_40_generations.vcf");
}
50 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069110.1_50_generations.vcf");
    sim.simulationFinished();
}
