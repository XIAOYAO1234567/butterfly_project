// SLiM 3.x-compatible • WF model • NC_069101.1
initialize() {
    initializeSLiMModelType("WF");
    initializeSLiMOptions(keepPedigrees = T, nucleotideBased = T);

    initializeAncestralNucleotides("/Users/oukaoruken/Desktop/NC_069101.1.upper.fna");

    initializeMutationTypeNuc("m1", 0.5, "f", 0.0);   // neutral
    initializeMutationTypeNuc("m2", 0.5, "f", 0.1);   // sweep
    initializeMutationTypeNuc("m3", 0.5, "f", -0.1);  // balancing

    mm = mmJukesCantor(1e-6);

    initializeGenomicElementType("g1", m1, 1.0, mm);
    initializeGenomicElementType("g2", m2, 1.0, mm);
    initializeGenomicElementType("g3", m3, 1.0, mm);

    // Neutral regions
    initializeGenomicElement(g1, 6800001 - 10000, 6800000);  // 10 kb left
    initializeGenomicElement(g1, 6870001, 328000000);         // rest

    // Sweep regions
    initializeGenomicElement(g2, 6810001, 6840000);           // 30 kb
    initializeGenomicElement(g2, 6850001, 6870000);           // 20 kb

    initializeRecombinationRate(1e-8);
}

1 early() {
    sim.addSubpop("p1", 5);
p1.genomes.readFromVCF('');
}

50 late() {
    sim.subpopulations[0].outputVCFSample(
        5,
        filePath = "/Users/oukaoruken/Desktop/slim_output/NC_069101.1_wf_model.vcf"
    );
    sim.simulationFinished();
}

