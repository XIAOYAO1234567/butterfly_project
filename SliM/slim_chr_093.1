    p1.outputMSSample(10,replace = F,filePath = "SLiM/NC_069093.1/NC_069093.1_20_generations.ms"); 
}
30 late() { 
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069093.1/NC_069093.1_30_generations.vcf"); 
