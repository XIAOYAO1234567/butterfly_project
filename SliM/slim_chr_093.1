// SLiM 3.x-compatible • WF model • NC_069093.1
initialize() {
    initializeSLiMModelType("WF");
    initializeSLiMOptions(keepPedigrees = T, nucleotideBased = T);

    initializeAncestralNucleotides("SLiM/NC_069093.1/NC_069093.1.upper.fna");

    initializeMutationTypeNuc("m1", 0.5, "f", 0.0);    // neutral
    initializeMutationTypeNuc("m2", 1.0, "f", 0.25);   // sweep（备用，当前未用）
    initializeMutationTypeNuc("m3", 10.0, "f", 0.01);  // balancing

    mm = mmJukesCantor(1e-7);

    initializeGenomicElementType("g1", m1, 1.0, mm);   // neutral
    initializeGenomicElementType("g2", m2, 1.0, mm);   // sweep（备用）
    initializeGenomicElementType("g3", m3, 1.0, mm);   // balancing

    initializeGenomicElement(g1, 1070001, 1210000);    // Neutral  (MT = 1)
    initializeGenomicElement(g3, 1210001, 1230000);    // Balancing (MT = 3)
    initializeGenomicElement(g1, 17486484, 17486485);    //rest

    initializeRecombinationRate(1e-8);

    m1.convertToSubstitution = F;
    m2.convertToSubstitution = F;
    m3.convertToSubstitution = F;
}

1 early() {
    sim.addSubpop("p1", 5);

    p1.genomes.readFromVCF(
        filePath = "SLiM/NC_069093.1/NC_069093.1_MT1_neutral.cleaned.vcf",
        mutationType = m1
    );

    p1.genomes.readFromVCF(
        filePath = "SLiM/NC_069093.1/NC_069093.1_MT3_balancing.cleaned.vcf",
        mutationType = m3
    );
}

10 late() { 
    sim.subpopulations[0].outputVCFSample(5, filePath="SLiM/NC_069093.1/NC_069093.1_10_generations.vcf");
    p1.outputMSSample(10,replace = F,filePath = "SLiM/NC_069093.1/NC_069093.1_10_generations.ms"); 
}
20 late() { 
