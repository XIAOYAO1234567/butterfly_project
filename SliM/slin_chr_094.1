// SLiM 3.x-compatible • WF model • NC_069094.1
initialize() {
    initializeSLiMModelType("WF");
    initializeSLiMOptions(keepPedigrees = T, nucleotideBased = T);

    initializeAncestralNucleotides("SLiM/NC_069094.1/NC_069094.1.upper.fna");

    // Mutation types
    initializeMutationTypeNuc("m1", 0.5, "f", 0.0);    // neutral
    initializeMutationTypeNuc("m3", 10.0, "f", 0.01);  // balancing

    // Mutation model
    mm = mmJukesCantor(1e-7);

    // Genomic element types
    initializeGenomicElementType("g1", m1, 1.0, mm);   // neutral
    initializeGenomicElementType("g3", m3, 1.0, mm);   // balancing

    // Genomic elements
    initializeGenomicElement(g3, 370001, 400000);     // Balancing
    initializeGenomicElement(g3, 680001, 710000);     // Balancing
    initializeGenomicElement(g1, 530001, 580000);     // Neutral
    initializeGenomicElement(g1, 17439805, 17439806);     // rest

    initializeRecombinationRate(1e-8);

    m1.convertToSubstitution = F;
    m3.convertToSubstitution = F;
}

1 early() {
    sim.addSubpop("p1", 5);

    // Read cleaned VCFs with assigned mutation types
    p1.genomes.readFromVCF("SLiM/NC_069094.1/NC_069094.1_MT1_neutral.cleaned.vcf", mutationType = m1);
    p1.genomes.readFromVCF("SLiM/NC_069094.1/NC_069094.1_MT3_balancing.cleaned.vcf", mutationType = m3);
}

10 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069094.1/NC_069094.1_10_generations.vcf");
}
20 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069094.1/NC_069094.1_20_generations.vcf");
}
30 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069094.1/NC_069094.1_30_generations.vcf");
}
40 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069094.1/NC_069094.1_40_generations.vcf");
}
50 late() {
    sim.subpopulations[0].outputVCFSample(5, filePath = "SLiM/NC_069094.1/NC_069094.1_50_generations.vcf");
    sim.simulationFinished();
}
